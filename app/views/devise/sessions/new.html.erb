<div class='row'>
  <div class='col m6 offset-m3 center'>

    <p>ログインして動画を見る</p>
    <%= link_to 'Login with Facebook', user_facebook_omniauth_authorize_path, class: 'btn blue darken-4' %>
    <br/><br/>
    <%= link_to 'Login up with Github', user_github_omniauth_authorize_path, class: 'btn grey darken-2' %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render 'shared/devisemes' %>

      <div class='input-field'>
        <%= f.email_field :email, id: 'email', class: 'validate', placeholder: 'Eメール' %>
      </div>

      <div class='input-field'>
        <%= f.password_field :password, id: 'password', class: 'validate', placeholder: 'password', autocomplete: 'off' %>
      </div>

      <button class='btn waves-effect waves-light' type='submit' name='action'>Login</button>
      <%= link_to 'forgot password', new_user_password_path, class: 'btn waves-effect waves-light' %>
    <% end %>

  </div>
</div>

