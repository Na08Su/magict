<% if @requests.count == 0 %>

	<p>まだリクエストがありません!</p>

<% end %>

<div class="row">
	<div class="col s12">
		<h5 class='pad50-top pad50-bottom'>リクエスト一覧</h5>
	</div>

	<div class="col s8">
		<ul class="collapsible" data-collapsible="accordion">
		<% @requests.each do |request| %>
			<li>
				<div class="collapsible-header"><span class="badge"><%= request.likes.count %></span><i class="material-icons">filter_drama</i><%= link_to request.title, request_path(request) %></div>
				<div class="collapsible-body"><p><%= request.description %><span class="badge new red"><%= request.likes.count %></span></p></div>
			</li>
		<% end %>

			<li>
				<div class="collapsible-header"><span class="badge">1</span><i class="material-icons">place</i>Second</div>

				<div class="collapsible-body"><p>もっとコンテンツ増やしてください</p></div>
			</li>
		</ul>
	</div>
	

	<div class="col s4"><!-- 投稿フォームに進む -->
	<a class="waves-effect waves-light btn-large blue lighten-3 z-depth-5" href='/requests/new'><i class="material-icons left">live_help</i><b>リクエストしてみる</b></a>
	</div>
</div>