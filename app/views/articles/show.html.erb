    <div class="card-panel white lighten-5 h1500">
      <h3 class='title center'><blockquote><%= @article.title %></blockquote></h3>

      <div class='article'>
        <b><%= simple_format(@article.content) %></b>
      </div>

    </div>
  </div>

  <!-- side -->
  <div class="col s12 m3 l3 mar50-top">
    <div class ='side'>
      <ul>
        <li>広告スペース１</li>
        <br>
        <hr>
        <br>
        <li>広告スペース２</li>
        <br>
        <hr>
        <br>
        <li class='center'><b>関連記事</b></li>
        <% @articles.each do |article| %>
          <br>

          <div class='card-panel hoverable white lighten-5 h300 article-box'>
            <div class="card-image waves-effect waves-block waves-light" style='height: 200px'>
              <%= image_tag article.image %>
            </div>
            <li><%= link_to article.title, article_path(article) %></li>
          </div>
        <% end %>
      </ul>
    </div>
  </div>
</div>

