			<!-- <h5>アホでも楽しく学べる</h5> -->
			<p>Ruby/ Ruby On Railsを動画で学ぶことができます</p>
		</div>

		<div class = "row">
		<div class="col m6 offset-m3 center">
			<%= form_for(:user, :url => registration_path(:user)) do |f| %>
				<%#= render 'shared/devisemes' %>

				<div class="input-field">
					<%= f.text_field :name, autofocus: true, class: "validate", placeholder: 'ユーザ名' %>
				</div>
				<div class="input-field">
					<%= f.email_field :email, autofucus: true, class: 'validate', placeholder: 'Eメールアドレス' %>
					
				</div>
				<div class="input-field">
					<%= f.password_field :password, autocomplete: 'off', class: 'validate', placeholder: 'パスワード' %>
				</div>

				<button class="btn waves-effect waves-light z-depth-5 deep-orange lighten-1" type="submit" name="action">新規登録
				</button>
			<% end %>
		</div>
		</div>

		<div class="register">
			<p>又は</p>

			<%= link_to "Facebookで登録", user_facebook_omniauth_authorize_path, class: "waves-effect waves-light btn-large blue darken-4 box facebook z-depth-5" %>

			<%= link_to "Githubで登録", user_github_omniauth_authorize_path, class: "waves-effect waves-light btn-large pink lighten-1 github z-depth-5" %>
		</div>

	</div><!-- imgtransparent-->
	</div><!-- backimg -->
	<%#= debug(params) if Rails.env.development? %>
